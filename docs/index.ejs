    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/twitter-bootstrap/4.1.3/css/bootstrap-grid.min.css">

    <!--highlight.js-->
    <link rel="stylesheet" href="//cdnjs.cloudflare.com/ajax/libs/highlight.js/9.12.0/styles/agate.min.css">
    <script src="//cdnjs.cloudflare.com/ajax/libs/highlight.js/9.12.0/highlight.min.js"></script>
    <script>hljs.initHighlightingOnLoad();</script>
    <script>
        function adjustNav() {
            const $sideNav = document.getElementById('side-nav');
            const $header = document.getElementById('header');
            const initialYOffset = $header.offsetHeight;

            if (window.pageYOffset > initialYOffset) {
                $sideNav.classList.add('nav-sticky');
            } else {
                $sideNav.classList.remove('nav-sticky');
            }
        }

        window.addEventListener('scroll', adjustNav)
    </script>
</head>
<body>

<%

const Basics = [
    {
        name: 'SimpleText',
        title: 'Data Biding',
        description: `
            Data binding in Asic is the synchronization between the model and the view.`
    },
    {
        name: 'ComplexComponent',
        title: 'Composition',
        description: `
            You can put one component into another.`
    },
    {
        name: 'Events',
        title: 'Events',
        description: `
            You can add mouse events on any HTML element.`
    },
    {
        name: 'Loops',
        title: 'Loops',
        description: `
            The <strong>*for</strong> directive repeats an HTML element`
    }
];

const Samples = [
    {
        name: 'Timer',
        title: 'Timer',
        description: `
            Javascript <strong>setInterval</strong> and <strong>setTimeout</strong> works fine.`
    },
    {
        name: 'InnerLoops',
        title: 'Inner Loops',
        description: ``
    }
];
%>

<Header id="header"></Header>

<section class="main-content">
    <div class="row">
        <!-- Side navigation -->
        <div class="col-sm-2">
            <div id="side-nav">
                <h3>
                    <a class="anchor" href="#GettingStarted" aria-hidden="true"><span class="octicon octicon-link">Getting Started</span></a>
                </h3>
                <ul>
                    <li>
                        <h4>
                            <a class="anchor" href="#Introduction" aria-hidden="true"><span class="octicon octicon-link">Introduction</span></a>
                        </h4>
                    </li>
                    <li>
                        <h4>
                            <a class="anchor" href="#Instalation" aria-hidden="true"><span class="octicon octicon-link">Instalation</span></a>
                        </h4>
                    </li>
                    <li>
                        <h4>
                            <a class="anchor" href="#BasicUsage" aria-hidden="true"><span class="octicon octicon-link">Basic Usage</span></a>
                        </h4>
                    </li>
                </ul>
                <h3>
                    <a class="anchor" href="#Basics" aria-hidden="true"><span class="octicon octicon-link">Basics</span></a>
                </h3>
                <ul>
                    <% Basics.forEach(function(sample){ %>
                    <li>
                        <h4>
                            <a class="anchor" href="#<%- sample.name %>" aria-hidden="true"><span class="octicon octicon-link"><%- sample.title %></span></a>
                        </h4>
                    </li>
                    <% }); %>
                </ul>
                <h3>
                    <a class="anchor" href="#Samples" aria-hidden="true"><span class="octicon octicon-link">Samples</span></a>
                </h3>
                <ul>
                    <% Samples.forEach(function(sample){ %>
                    <li>
                        <h4>
                            <a class="anchor" href="#<%- sample.name %>" aria-hidden="true"><span class="octicon octicon-link"><%- sample.title %></span></a>
                        </h4>
                    </li>
                    <% }); %>
                </ul>
            </div>
        </div>
        <!-- Side navigation end -->

        <!-- Main content -->
        <div class="col-sm-10">
            <h2>
                <a id="GettingStarted" class="anchor" href="#Setup" aria-hidden="true"><span class="octicon octicon-link"></span></a>Getting Started
            </h2>

            <div class="row">
                <div class="col-sm">
                    <h3>
                        <a id="Introduction" class="anchor" href="#GettingStarted" aria-hidden="true"><span class="octicon octicon-link"></span></a>Introduction
                    </h3>
                    <p>
                        Asic is a progressive framework for building user interfaces. Unlike other monolithic frameworks,
                        Asic doesn't require any boilerplate code. Asic is also perfectly capable of powering sophisticated Single-Page Applications
                        when used in combination with modern tooling and supporting libraries.
                    </p>

                    <h3>
                        <a id="Instalation" class="anchor" href="#GettingStarted" aria-hidden="true"><span class="octicon octicon-link"></span></a>Instalation
                    </h3>

                    <p>via npm</p>
                    <div class="show-language">
                        <div class="show-language-label">bash</div>
                    </div>
                    <pre><code class="bash">
npm i asic --save
                    </code></pre>

                    <p>via CDN</p>
                    <div class="show-language">
                        <div class="show-language-label">HTML</div>
                    </div>
                    <pre><code class="html">
&lt;script src="https://unpkg.com/asic"&gt;&lt;/script&gt;
                    </code></pre>

                    <h3>
                        <a id="BasicUsage" class="anchor" href="#GettingStarted" aria-hidden="true"><span class="octicon octicon-link"></span></a>Basic Usage
                    </h3>

                    <div class="show-language">
                        <div class="show-language-label">JavaScript</div>
                    </div>
                    <pre><code class="javascript">
<%- require(`!!raw-loader!../samples/BasicUsage.js`) %>
                    </code></pre>
                    <div class="show-language">
                        <div class="show-language-label">HTML</div>
                    </div>
                    <pre><code class="html">
<%- require(`!!raw-loader!../samples/BasicUsage.html`) %>
                    </code></pre>
                </div>
            </div>

            <h2>
                <a id="Basics" class="anchor" href="#Basics" aria-hidden="true"><span class="octicon octicon-link"></span></a>Basics
            </h2>

            <% Basics.forEach(function(sample){ %>

            <div class="row">
                <div class="col-sm">
                    <h3>
                        <a id="<%- sample.name %>" class="anchor" href="#<%- sample.name %>" aria-hidden="true"><span class="octicon octicon-link"></span></a><%- sample.title %>
                    </h3>
                    <p><%= sample.description %></p>
                </div>
            </div>
            <div class="row">
                <div class="col-sm-4">

                    <label class="label"><%- sample.name %></label>

                    <%= require(`!!raw-loader!../samples/${sample.name}.html`) %>
                </div>
                <div class="col-sm-8">
                    <label class="label">Code Sample</label>

                    <div class="show-language">
                        <div class="show-language-label">JavaScript</div>
                    </div>
                    <pre><code class="javascript">
<%- require(`!!raw-loader!../samples/${sample.name}.js`) %>
                    </code></pre>
                    <div class="show-language">
                        <div class="show-language-label">HTML</div>
                    </div>
                    <pre><code class="html">
<%- require(`!!raw-loader!../samples/${sample.name}.html`) %>
                    </code></pre>
                </div>
            </div>

            <% }); %>

            <h2>
                <a id="Samples" class="anchor" href="#Samples" aria-hidden="true"><span class="octicon octicon-link"></span></a>Samples
            </h2>

            <% Samples.forEach(function(sample){ %>

            <div class="row">
                <div class="col-sm">
                    <h3>
                        <a id="<%- sample.name %>" class="anchor" href="#<%- sample.name %>" aria-hidden="true"><span class="octicon octicon-link"></span></a><%- sample.title %>
                    </h3>
                    <p><%= sample.description %></p>
                </div>
            </div>
            <div class="row">
                <div class="col-sm-4">
                    <label class="label"><%- sample.name %></label>

                    <%= require(`!!raw-loader!../samples/${sample.name}.html`) %>
                </div>
                <div class="col-sm-8">
                    <label class="label">Code Sample</label>

                    <div class="show-language">
                        <div class="show-language-label">JavaScript</div>
                    </div>
                    <pre><code class="javascript">
<%- require(`!!raw-loader!../samples/${sample.name}.js`) %>
                    </code></pre>
                    <div class="show-language">
                        <div class="show-language-label">HTML</div>
                    </div>
                    <pre><code class="html">
<%- require(`!!raw-loader!../samples/${sample.name}.html`) %>
                    </code></pre>
                </div>
            </div>

            <% }); %>

        </div>
        <!-- Main content end -->

    </div>

</section>

<Footer></Footer>

</body>
</html>