<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <link rel="icon" href="https://amalieiev.github.io/asic/static/asic-logo.png" type="image/x-icon">
    <title>Asic | Javascript Framework</title>
    <meta name="viewport" content="width=device-width,initial-scale=1,maximum-scale=1">
    <meta name="description" content="Progressive javascript web framework without jQuery.">
    <meta name="og:title" content="Asic | Javascript Framework">
    <meta name="og:site_name" content="Asic | Javascript Framework">
    <meta name="og:url" content="https://amalieiev.github.io/asic">
    <meta name="og:description" content="Progressive javascript web framework without jQuery.">
    <meta name="og:image" content="https://amalieiev.github.io/asic/static/asic-logo.png">
    <meta name="twitter:image" content="https://amalieiev.github.io/asic/static/asic-logo.png">
    <meta name="twitter:title" content="Asic | Javascript Framework">
    <meta name="twitter:description" content="Progressive javascript web framework without jQuery.">

    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/twitter-bootstrap/4.1.3/css/bootstrap-grid.min.css">

    <!--highlight.js-->
    <link rel="stylesheet" href="//cdnjs.cloudflare.com/ajax/libs/highlight.js/9.12.0/styles/agate.min.css">
    <script src="//cdnjs.cloudflare.com/ajax/libs/highlight.js/9.12.0/highlight.min.js"></script>
    <script>hljs.initHighlightingOnLoad();</script>
</head>
<body>

<%

const Basics = [
    {
        name: 'SimpleText',
        title: 'Data Biding',
        description: `
            Data binding in Asic is the synchronization between the model and the view.`
    },
    {
        name: 'ComplexComponent',
        title: 'Composition',
        description: `
            You can put one component into another.`
    },
    {
        name: 'Events',
        title: 'Events',
        description: `
            You can add mouse events on any HTML element.`
    },
    {
        name: 'Loops',
        title: 'Loops',
        description: `
            The <strong>*for</strong> directive repeats an HTML element`
    }
];

const Samples = [
    {
        name: 'Timer',
        title: 'Timer',
        description: `
            Javascript <strong>setInterval</strong> and <strong>setTimeout</strong> works fine.`
    },
    {
        name: 'InnerLoops',
        title: 'Inner Loops',
        description: ``
    }
];
%>

<Header></Header>

<section class="main-content">
    <div class="row">
        <!-- Side navigation -->
        <div class="col-sm-2">
            <h3>
                <a class="anchor" href="#Setup" aria-hidden="true"><span class="octicon octicon-link">Setup</span></a>
            </h3>
            <ul>
                <li>
                    <h4>
                        <a class="anchor" href="#GettingStarted" aria-hidden="true"><span class="octicon octicon-link">Getting Started</span></a>
                    </h4>
                </li>
            </ul>
            <h3>
                <a class="anchor" href="#Basics" aria-hidden="true"><span class="octicon octicon-link">Basics</span></a>
            </h3>
            <ul>
                <% Basics.forEach(function(sample){ %>
                <li>
                    <h4>
                        <a class="anchor" href="#<%- sample.name %>" aria-hidden="true"><span class="octicon octicon-link"><%- sample.title %></span></a>
                    </h4>
                </li>
                <% }); %>
            </ul>
            <h3>
                <a class="anchor" href="#Samples" aria-hidden="true"><span class="octicon octicon-link">Samples</span></a>
            </h3>
            <ul>
                <% Samples.forEach(function(sample){ %>
                <li>
                    <h4>
                        <a class="anchor" href="#<%- sample.name %>" aria-hidden="true"><span class="octicon octicon-link"><%- sample.title %></span></a>
                    </h4>
                </li>
                <% }); %>
            </ul>
        </div>
        <!-- Side navigation end -->

        <!-- Main content -->
        <div class="col-sm-10">
            <h2>
                <a id="Basics" class="anchor" href="#Basics" aria-hidden="true"><span class="octicon octicon-link"></span></a>Basics
            </h2>

            <% Basics.forEach(function(sample){ %>

            <div class="row">
                <div class="col-sm">
                    <h3>
                        <a id="<%- sample.name %>" class="anchor" href="#<%- sample.name %>" aria-hidden="true"><span class="octicon octicon-link"></span></a><%- sample.title %>
                    </h3>
                    <p><%= sample.description %></p>
                </div>
            </div>
            <div class="row">
                <div class="col-sm-4">

                    <label class="label"><%- sample.name %></label>

                    <%= require(`!!raw-loader!../samples/${sample.name}.html`) %>
                </div>
                <div class="col-sm-8">
                    <label class="label">Code Sample</label>

                    <pre><code class="javascript">
<%- require(`!!raw-loader!../samples/${sample.name}.js`) %>
                    </code></pre>
                    <pre><code class="html">
<%- require(`!!raw-loader!../samples/${sample.name}.html`) %>
                    </code></pre>
                </div>
            </div>

            <% }); %>

            <h2>
                <a id="Samples" class="anchor" href="#Samples" aria-hidden="true"><span class="octicon octicon-link"></span></a>Samples
            </h2>

            <% Samples.forEach(function(sample){ %>

            <div class="row">
                <div class="col-sm">
                    <h3>
                        <a id="<%- sample.name %>" class="anchor" href="#<%- sample.name %>" aria-hidden="true"><span class="octicon octicon-link"></span></a><%- sample.title %>
                    </h3>
                    <p><%= sample.description %></p>
                </div>
            </div>
            <div class="row">
                <div class="col-sm-4">
                    <label class="label"><%- sample.name %></label>

                    <%= require(`!!raw-loader!../samples/${sample.name}.html`) %>
                </div>
                <div class="col-sm-8">
                    <label class="label">Code Sample</label>

                    <pre><code class="javascript">
<%- require(`!!raw-loader!../samples/${sample.name}.js`) %>
                    </code></pre>
                    <pre><code class="html">
<%- require(`!!raw-loader!../samples/${sample.name}.html`) %>
                    </code></pre>
                </div>
            </div>

            <% }); %>

        </div>
        <!-- Main content end -->

    </div>

</section>

<Footer></Footer>

</body>
</html>